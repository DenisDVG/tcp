<Window x:Class="MicroTcp.Client.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroTcp.Client"
        mc:Ignorable="d"
        Title="Set Port" Height="200" Width="300">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="txt_PortNumber" HorizontalAlignment="Left" Height="23" Margin="88,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Type Port Number From 5555 To 5564" HorizontalAlignment="Left" Margin="44,30,0,0" VerticalAlignment="Top" Width="214"/>
        <Button x:Name="btn_Set_Port" Content="Set Port" HorizontalAlignment="Left" Margin="113,101,0,0" VerticalAlignment="Top" Width="75" Click="btn_Set_Port_Click"/>

    </Grid>
</Window>
